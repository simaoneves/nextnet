<p id="notice"><%= notice %></p>

<h1>Listing Messages</h1>

<table>
  <thead>
    <tr>
      <th>Message</th>
      <th>From</th>
      <th>To</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @conversations.each do |user_from| %>
      <tr>
        <td><%= user_from.name %></td>
        <td><%= link_to 'Show conversation', "/messages/#{user_from.id}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>